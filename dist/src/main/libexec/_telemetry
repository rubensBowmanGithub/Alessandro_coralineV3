# resolve links - $0 may be a softlink
PRG="${0}"

while [ -h "${PRG}" ]; do
ls=`ls -ld "${PRG}"`
link=`expr "$ls" : '.*-> \(.*\)$'`
if expr "$link" : '/.*' > /dev/null; then
PRG="$link"
else
PRG=`dirname "${PRG}"`/"$link"
fi
done

BASEDIR=`dirname ${PRG}`
BASEDIR=`cd ${BASEDIR}/..;pwd`
COR_DIST=${BASEDIR}

COR_HOME=${COR_HOME:=${COR_DIST}}
source ${COR_HOME}/libexec/coraline-env.sh

COR_CONF=${COR_CONF:=${COR_HOME}/etc}
COR_DATA=${COR_DATA:=${COR_HOME}/data}
COR_LOG=${COR_LOG:=${COR_HOME}/log}
COR_RESOURCES=${COR_RESOURCES:=${COR_HOME}/resources}

COR_JAVA_OPTS="${COR_JAVA_OPTS} -Dsdc.dist.dir=${COR_DIST}"
COR_JAVA_OPTS="${COR_JAVA_OPTS} -Dsdc.resources.dir=${COR_RESOURCES}"
COR_JAVA_OPTS="${COR_JAVA_OPTS} -Dsdc.conf.dir=${COR_CONF}"
COR_JAVA_OPTS="${COR_JAVA_OPTS} -Dsdc.data.dir=${COR_DATA}"
COR_JAVA_OPTS="${COR_JAVA_OPTS} -Dsdc.log.dir=${COR_LOG}"

API_CLASSPATH="${COR_DIST}/api-lib/"'*'
CLI_CLASSPATH="${COR_DIST}/cli-lib/"'*'
CONTAINER_CLASSPATH="${COR_DIST}/container-lib/"'*'
JARS=${API_CLASSPATH}:${CONTAINER_CLASSPATH}:${CLI_CLASSPATH}

if [ -z "$JAVA_HOME" ]
then
  JAVA=`which java`
else
  JAVA="$JAVA_HOME/bin/java"
fi

exec ${JAVA} -classpath ${JARS} ${COR_JAVA_OPTS} \
    com.streamsets.datacollector.usagestats.cli.TelemetryCli "$@"
