# resolve links - $0 may be a softlink
PRG="${0}"

run() {
  "${@}"
  ret=$?
  if [ $ret != 0 ]; then
    echo
    echo "Failed!"
    echo
    exit $ret
  fi
}

while [ -h "${PRG}" ]; do
  ls=`ls -ld "${PRG}"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "${PRG}"`/"$link"
  fi
done

BASEDIR=`dirname ${PRG}`
BASEDIR=`cd ${BASEDIR}/..;pwd`

COR_DIST=${BASEDIR}

COR_HOME=""
COR_HTTP_PORT=""
SDC_HTTPS_PORT=""
while test $# -gt 0; do
  case "$1" in
    -home=*)
      COR_HOME=`echo $1 | sed -e 's/^[^=]*=//g'`
      shift
      ;;
    -httpPort=*)
      COR_HTTP_PORT=`echo $1 | sed -e 's/^[^=]*=//g'`
      shift
      ;;
    -httpsPort=*)
      SDC_HTTPS_PORT=`echo $1 | sed -e 's/^[^=]*=//g'`
      shift
      ;;
    -conf=*)
      COR_CONF_TEMP=`echo $1 | sed -e 's/^[^=]*=//g'`
      shift
      ;;
    -help)
      echo ""
      echo "streamsets create-dc -home=<COR_HOME_DIR> (-httpPort=<COR_HTTP_PORT> | -httpsPort=<SDC_HTTPS_PORT>) [-conf=<COR_CONF_DIR>]"
      echo ""
      echo "  The <COR_HOME_DIR> directory must not exist."
      echo ""
      echo "  The default value for <COR_CONF_DIR> is '${COR_DIST}/etc'"
      echo ""
      exit 0
      ;;
    *)
      echo ""
      echo "Invalid arguments, run 'streamsets create-dc -help'"
      echo ""
      $0 -help
      exit 1
      ;;
  esac
done

if [[ -z "${COR_HOME}" ]]
then
  echo ""
  echo "Missing arguments, run 'streamsets create-dc -help'"
  echo ""
  $0 -help
  exit 1
fi

if [[ -z "${COR_HTTP_PORT}" && -z "${SDC_HTTPS_PORT}" ]]
then
  echo ""
  echo "Missing arguments, run 'streamsets create-dc -help'"
  echo ""
  $0 -help
  exit 1
fi

if [ -d "${COR_HOME}" ]
then
  echo ""
  echo "The specified home directory must not exist"
  echo ""
  exit 1
fi

if [[ -z "${COR_CONF_TEMP}" ]]
then
  COR_CONF_TEMP=${COR_DIST}/etc
fi

COR_HTTP_PORT=${COR_HTTP_PORT:="-1"}
SDC_HTTPS_PORT=${SDC_HTTPS_PORT:="-1"}


run mkdir "${COR_HOME}"
COR_HOME=`cd ${COR_HOME};pwd`

run mkdir "${COR_HOME}/bin"
run mkdir "${COR_HOME}/etc"
run mkdir "${COR_HOME}/libexec"

SCRIPT="${COR_HOME}/bin/coraline"

run echo "#!/bin/bash" > ${SCRIPT}
run echo "#" >> ${SCRIPT}
run echo "# (c) 2014 StreamSets, Inc. All rights reserved. May not" >> ${SCRIPT}
run echo "# be copied, modified, or distributed in whole or part without" >> ${SCRIPT}
run echo "# written consent of StreamSets, Inc." >> ${SCRIPT}
run echo "#" >> ${SCRIPT}
run echo "if [[ \"\$1\" == \"\" ]]" >> ${SCRIPT}
run echo "then" >> ${SCRIPT}
run echo "  echo """ >> ${SCRIPT}
run echo "  echo \"Missing sub-command, 'dc' sub-command is required from instance directories\"" >> ${SCRIPT}
run echo "  echo """ >> ${SCRIPT}
run echo "  exit 1" >> ${SCRIPT}
run echo "fi" >> ${SCRIPT}
run echo "" >> ${SCRIPT}
run echo "if [[ \"\$1\" != \"dc\" ]]" >> ${SCRIPT}
run echo "then" >> ${SCRIPT}
run echo "  echo """ >> ${SCRIPT}
run echo "  echo \"Invalid sub-command, only 'dc' sub-command is supported from instance directories\"" >> ${SCRIPT}
run echo "  echo """ >> ${SCRIPT}
run echo "  exit 1" >> ${SCRIPT}
run echo "fi" >> ${SCRIPT}
run echo "" >> ${SCRIPT}
run echo "shift" >> ${SCRIPT}
run echo "export COR_HOME=${COR_HOME}" >> ${SCRIPT}
run echo "exec ${COR_DIST}/bin/coraline dc \"\$@\"" >> ${SCRIPT}
run echo "" >> ${SCRIPT}


run chmod a+x ${SCRIPT}
run cp -r -p "${COR_CONF_TEMP}/"* "${COR_HOME}/etc/"
run cp -p "${COR_DIST}/libexec/"*".sh" "${COR_HOME}/libexec/"
run rm "${COR_HOME}/etc/cor.properties"

SED_OPTIONS=""
if [ -n "${COR_HTTP_PORT}" ]
then
  SED_OPTIONS="-e s|http.port=.*$|http.port=${COR_HTTP_PORT}|"
fi

if [ -n "${SDC_HTTPS_PORT}" ]
then
  SED_OPTIONS="${SED_OPTIONS} -e s|https.port=.*$|https.port=${SDC_HTTPS_PORT}|"
fi

run sed ${SED_OPTIONS} < "${COR_CONF_TEMP}/cor.properties" > "${COR_HOME}/etc/cor.properties"

# drop COR_CONF_TEMP
unset -v COR_CONF_TEMP

echo ""
echo "New Data Collector created at ${COR_HOME} on HTTP port ${COR_HTTP_PORT} and HTTPS port ${SDC_HTTPS_PORT}"
echo ""
echo "Use '${COR_HOME}/bin/coraline dc' to run the new Data Collector"
echo ""
exit 0
